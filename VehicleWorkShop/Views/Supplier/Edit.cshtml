@using VehicleWorkShop.ViewModels
@model SupplierVM

<form asp-action="Edit" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()">
    <div class="card shadow-lg mt-4">
        <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0" style="font-family: 'Brush Script MT', cursive;">Supplier Information</h4>
        </div>

        <div class="card-body px-5">
            <input asp-for="SupplierId" type="hidden" />

            <div class="mb-3">
                <label asp-for="SupplierName" class="form-label">Supplier Name <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person-lines-fill"></i>
                    </span>
                    <input asp-for="SupplierName" class="form-control" />
                </div>
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Mobile" class="form-label">Mobile <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-phone-fill"></i>
                    </span>
                    <input asp-for="Mobile" class="form-control" />
                </div>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-geo-alt-fill"></i>
                    </span>
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Manager" class="form-label">Manager <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person-badge-fill"></i>
                    </span>
                    <textarea asp-for="Manager" class="form-control" rows="3"></textarea>
                </div>
                <span asp-validation-for="Manager" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="row justify-content-center">
                <div class="col-md-3 mb-2 mb-md-0">
                    <button type="submit" asp-route-id="@Model.SupplierId" class="btn btn-primary w-100" style="font-size: 18px;">
                        <i class="bi bi-save2"></i> Update
                    </button>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-secondary w-100" asp-action="Index"
                       asp-route-pg="@TempData.Peek("CurrentPage")" style="font-size: 18px;">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
