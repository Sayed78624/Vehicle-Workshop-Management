@model VehicleWorkShop.ViewModels.SupplierVM

@{
    ViewData["Title"] = "Delete Supplier";
}


<div class="card shadow-lg mt-4">
    <div class="card-header bg-danger text-white text-center">
        <h4 class="mb-0"><i class="bi bi-trash3-fill"></i> Delete Supplier Information</h4>
    </div>

    <div class="card-body px-5">
        <p class="text-center fs-5 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this supplier?</p>

        <dl class="row mt-4">
            <dt class="col-sm-3"><i class="bi bi-person-lines-fill me-1"></i>Supplier Name</dt>
            <dd class="col-sm-9">@Model.SupplierName</dd>

            <dt class="col-sm-3"><i class="bi bi-phone-fill me-1"></i>Mobile</dt>
            <dd class="col-sm-9">@Model.Mobile</dd>

            <dt class="col-sm-3"><i class="bi bi-geo-alt-fill me-1"></i>Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3"><i class="bi bi-person-badge-fill me-1"></i>Manager</dt>
            <dd class="col-sm-9">@Model.Manager</dd>
        </dl>
    </div>

    <div class="card-footer bg-light">
        <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-3">
            <input type="hidden" asp-for="SupplierId" />
            <button type="submit" class="btn btn-danger px-4" style="font-size: 18px;">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary px-4" style="font-size: 18px;">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
