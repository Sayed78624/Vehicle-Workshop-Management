@model IEnumerable<VehicleWorkShop.ViewModels.SaleVM>
<div>
    <a asp-action="Create" class="btn btn-success">Sale</a>
</div>
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Sale List</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-success">
                    <tr>
                        <th scope="col">Sale SL</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Approved</th>
                        <th scope="col">Action</th>
                        <th scope="col">Approve Sale</th>
                        <th scope="col">Generate Invoice</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SaleId</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Description</td>
                            <td>@item.IsApprove</td>
                            <td>
                                <a asp-action="Create" asp-route-id="@item.SaleId" class="btn btn-info btn-sm">Show Details</a>
                            </td>
                            <td>
                                <a asp-action="Approve" asp-route-id="@item.SaleId" class="btn btn-info btn-sm" onclick="return confirm('Are you sure to approve this sale.')">Approve</a>
                            </td>
                            <td>
                                <a asp-action="Invoice" asp-route-id="@item.SaleId" class="btn btn-info btn-sm">View Invoice</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="details1" class="collapse">
                <table class="table table-sm table-bordered text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>VAT (%)</th>
                            <th>Sub Total</th>
                            <th>Store Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Engine Oil</td>
                            <td>2</td>
                            <td>400</td>
                            <td>5</td>
                            <td>840</td>
                            <td>Main Store</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>