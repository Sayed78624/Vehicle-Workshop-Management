@model VehicleWorkShop.ViewModels.CustomerVM

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header rounded-top-4 bg-danger bg-gradient text-white py-4 text-center">
            <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
            <h3 class="mt-2 mb-0">Delete Confirmation</h3>
            <p class="mb-0 fw-light">Are you sure you want to delete this customer?</p>
        </div>

        <div class="card-body px-5 py-4">
            <h5 class="mb-4 text-center text-secondary">Customer Information</h5>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold text-end">Name:</div>
                <div class="col-md-8">@Model.Name</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold text-end">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold text-end">Mobile:</div>
                <div class="col-md-8">@Model.Mobile</div>
            </div>
            <div class="row mb-4">
                <div class="col-md-4 fw-bold text-end">Address:</div>
                <div class="col-md-8">@Model.Address</div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CustomerId" />
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-danger px-4 me-3">
                        <i class="bi bi-trash3-fill me-1"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
