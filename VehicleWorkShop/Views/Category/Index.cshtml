@model IEnumerable<VehicleWorkShop.ViewModels.CategoryVM>

<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-tags-fill me-3" style="font-size: 36px;"></i>
        <h1 class="mb-0" style="font-size: 36px;">Category List</h1>
    </div>

    <a asp-action="Create" class="btn btn-outline-success rounded-pill mb-3">
        <i class="bi bi-plus-circle me-1"></i> Create Category
    </a>

    <table class="table table-hover table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="text-success">Active</span>
                        }
                        else
                        {
                            <span class="text-danger">Inactive</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning me-1" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info me-1" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure to delete?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
