@model VehicleWorkShop.ViewModels.CustomerVM

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-5">
        <div class="card-header bg-primary bg-gradient text-white rounded-top-5 py-4">
            <h4 class="text-center mb-0">
                <i class="bi bi-person-lines-fill me-2"></i> New Customer Entry
            </h4>
        </div>

        <form asp-action="Create" method="post" class="p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="row g-4 justify-content-center">
                <div class="col-md-5">

                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="Full Name">
                        <label asp-for="Name"><i class="bi bi-person"></i> Full Name</label>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                </div>
                <div class="col-md-5">

                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" placeholder="Email Address">
                        <label asp-for="Email"><i class="bi bi-envelope"></i> Email</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                </div>
                <div class="col-md-5">

                    <div class="form-floating">
                        <input asp-for="Mobile" class="form-control" placeholder="Mobile Number">
                        <label asp-for="Mobile"><i class="bi bi-phone"></i> Mobile</label>
                        <span asp-validation-for="Mobile" class="text-danger small"></span>
                    </div>

                </div>
                <div class="col-md-5">

                    <div class="form-floating">
                        <input asp-for="Address" class="form-control" placeholder="Address">
                        <label asp-for="Address"><i class="bi bi-geo-alt"></i> Address</label>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-outline-primary me-2 px-4">
                    <i class="bi bi-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
