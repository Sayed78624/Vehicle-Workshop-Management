@model List<VehicleWorkShop.ViewModels.StoreProductReportVM>

<h2 class="text-primary">All Store Stock Report</h2>

@foreach (var store in Model)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-light fw-bold">@store.StoreName</div>
        <div class="card-body p-2">
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Parts No</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in store.Products)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Quantity</td>
                            <td>@product.PartsNo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
