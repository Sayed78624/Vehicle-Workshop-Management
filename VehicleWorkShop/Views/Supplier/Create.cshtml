@model VehicleWorkShop.ViewModels.SupplierVM

@{
    ViewData["Title"] = "Create Supplier";
}


<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">
                <i class="bi bi-building me-2"></i>Create New Supplier
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="SupplierName" class="form-label fw-bold text-dark">
                        <i class="bi bi-person-fill me-1"></i> Supplier Name
                    </label>
                    <input asp-for="SupplierName" class="form-control" placeholder="Enter supplier name" />
                    <span asp-validation-for="SupplierName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mobile" class="form-label fw-bold text-dark">
                        <i class="bi bi-telephone-fill me-1"></i> Mobile Number
                    </label>
                    <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold text-dark">
                        <i class="bi bi-geo-alt-fill me-1"></i> Address
                    </label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Manager" class="form-label fw-bold text-dark">
                        <i class="bi bi-person-badge-fill me-1"></i> Contact Person / Manager
                    </label>
                    <input asp-for="Manager" class="form-control" placeholder="Enter manager name" />
                    <span asp-validation-for="Manager" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle-fill me-1"></i> Create Supplier
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

