@using VehicleWorkShop.Models
@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient bg-danger text-white rounded-top-4">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Product Deletion
                    </h3>
                </div>
                <div class="card-body px-5 py-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                        <div>
                            Are you absolutely sure you want to delete this product? This action cannot be undone.
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageName))
                            {
                                <img src="~/images/@Model.ImageName" class="img-fluid rounded shadow-sm" alt="Product Image" />
                            }
                            else
                            {
                                <div class="text-muted fst-italic">No image available</div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 fw-bold">Product Name:</dt>
                                <dd class="col-sm-7">@Model.ProductName</dd>

                                <dt class="col-sm-5 fw-bold">Part Number:</dt>
                                <dd class="col-sm-7">@Model.PartNo</dd>

                                <dt class="col-sm-5 fw-bold">Price:</dt>
                                <dd class="col-sm-7">৳@Model.Price.ToString("0.00")</dd>

                                <dt class="col-sm-5 fw-bold">Description:</dt>
                                <dd class="col-sm-7">@Model.Description</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="d-flex justify-content-end gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="bi bi-trash3-fill"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-muted text-end small rounded-bottom-4">
                    Deleting time: @DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt")
                </div>
            </div>
        </div>
    </div>
</div>
