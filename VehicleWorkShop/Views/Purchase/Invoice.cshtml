@model VehicleWorkShop.ViewModels.PurchaseInvoice
@{
    if (ViewData["From"]?.ToString() == "pdf")
    {
        Layout = null;
    }
    ViewData["Title"] = "Purchase Invoice";

    if (Model == null)
    {
        <p>Purchase invoice is not here......</p>
        return;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            background: #f8f9fa;
            padding: 20px;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .invoice {
            background: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            max-width: 900px;
            margin: auto;
            color: #000;
        }

       
        .invoice-header {
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 20px;
            padding-bottom: 10px;
            display: block;
            overflow: hidden;
        }

            .invoice-header > .left,
            .invoice-header > .right {
                display: block;
            }

            .invoice-header > .left {
                float: left;
                max-width: 60%;
                text-align: left;
            }

            .invoice-header > .right {
                float: right;
                max-width: 35%;
                text-align: right;
            }

        
            .invoice-header::after {
                content: "";
                display: table;
                clear: both;
            }

     
        .supplier-info {
            margin-bottom: 30px;
            overflow: hidden;
        }

            .supplier-info > .left,
            .supplier-info > .right {
                display: block;
                float: left;
            }

            .supplier-info > .left {
                width: 48%;
                text-align: left;
            }

            .supplier-info > .right {
                width: 48%;
                text-align: left;
                margin-left: 4%;
            }

            .supplier-info::after {
                content: "";
                display: table;
                clear: both;
            }

       
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        thead th {
            background-color: #343a40;
            color: #fff;
            padding: 8px;
            border: 1px solid #ddd;
            text-align: center;
        }

        tbody td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: center;
            vertical-align: middle;
        }

            tbody td.text-left {
                text-align: left;
            }

        tfoot th,
        tfoot td {
            padding: 10px 8px;
            border: 1px solid #ddd;
            text-align: right;
            font-weight: bold;
        }

        tfoot th {
            text-align: right;
        }

        
        .invoice-footer {
            border-top: 2px solid #dee2e6;
            margin-top: 60px;
            padding-top: 10px;
            font-size: 0.9rem;
            color: #6c757d;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .invoice-footer > div {
                flex: 1;
                text-align: center;
            }

   
        @@media print {
            .no-print

        {
            display: none;
        }

        }
    </style>
</head>
<body>
    <div class="invoice">
      
        <div class="invoice-header">
            <div class="left">
                <h2 style="margin-bottom:5px;">Vehicle Workshop</h2>
                <p style="margin:0;">Your Company Address Here</p>
                <p style="margin:0;">Phone: +880 1234 567890</p>
                <p style="margin:0;">Email: info@vehicleworkshop.com</p>
            </div>
            <div class="right">
                <h3 style="color:#0d6efd; margin-bottom:5px;">INVOICE</h3>
                <p style="margin:0;"><strong>Invoice ID:</strong> #@Model.InvoiceId</p>
                <p style="margin:0;"><strong>Date:</strong> @Model.PurchaseDate.ToString("dd MMM yyyy")</p>
            </div>
        </div>

      
        <div class="supplier-info">
            <div class="left">
                <h5 style="margin-bottom:8px;">Invoice To:</h5>
                <p style="margin:2px 0;"><strong>Supplier:</strong> @(Model.SupplierName ?? "N/A")</p>
                <p style="margin:2px 0;"><strong>Manager:</strong> @Model.ManagerName</p>
                <p style="margin:2px 0;"><strong>Mobile:</strong> @Model.Mobile</p>
                <p style="margin:2px 0;"><strong>Address:</strong> @Model.Address</p>
            </div>
          
        </div>

       
        <table>
            <thead>
                <tr>
                    <th>SL</th>
                    <th>Product</th>
                    <th>Model</th>
                    <th>Quantity</th>
                    <th>Price (৳)</th>
                    <th>VAT (%)</th>
                    <th>Sub Total (৳)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Details != null && Model.Details.Any())
                {
                    var sl = 1;
                    foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>@sl</td>
                            <td class="text-left">@item.ProductName</td>
                            <td class="text-left">@item.ModelName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("0.00")</td>
                            <td>@item.Vat.ToString("0.00")</td>
                            <td>@item.SubTotal.ToString("0.00")</td>
                        </tr>
                        sl++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" style="text-align:center;">No details available.</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="6" style="text-align:right;">Grand Total (৳)</th>
                    <th>@Model.GrandTotal.ToString("0.00")</th>
                </tr>
            </tfoot>
        </table>

       
        <div>
            <h6>Notes:</h6>
            <p>Thank you for doing business with Vehicle Workshop.</p>
        </div>

      
        <div class="invoice-footer">
            <div>
                <p>_________________________</p>
                <p><strong>Authorized Signature</strong></p>
            </div>
            <div>
                <p>_________________________</p>
                <p><strong>Supplier Signature</strong></p>
            </div>
        </div>

        @if (ViewData["From"]?.ToString() != "pdf")
        {
            <div style="text-align:center; margin-top:30px;" class="no-print">
                <button onclick="window.print()" style="margin-right:10px; padding:8px 15px; font-size:1rem;">🖨️ Print Invoice</button>
                <a asp-action="DownloadInvoice" asp-route-id="@Model.InvoiceId" style="margin-right:10px; padding:8px 15px; font-size:1rem; background:#0d6efd; color:#fff; text-decoration:none; border-radius:4px;">⬇️ Download PDF</a>
                <a asp-action="Index" style="padding:8px 15px; font-size:1rem; background:#6c757d; color:#fff; text-decoration:none; border-radius:4px;">Back To List</a>
            </div>
        }
    </div>
</body>
</html>
