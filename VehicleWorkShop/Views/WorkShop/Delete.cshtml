@model VehicleWorkShop.ViewModels.WorkShopVM

@{
    ViewData["Title"] = "Delete WorkShop";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion</h3>
        </div>

        <div class="card-body">
            <p class="fs-5 text-center mb-4">
                Are you sure you want to delete this <strong>WorkShop</strong> information?
            </p>

            <dl class="row border rounded-3 p-3 bg-light">
                <dt class="col-sm-4 fw-bold">WorkShop Name:</dt>
                <dd class="col-sm-8">@Model.WorkShopName</dd>

                <dt class="col-sm-4 fw-bold">Number Of Bay:</dt>
                <dd class="col-sm-8">@Model.NumberOfBay</dd>

                <dt class="col-sm-4 fw-bold">Number Of Level:</dt>
                <dd class="col-sm-8">@Model.NumberOfLevel</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-center gap-3">
                <input type="hidden" asp-for="WorkShopId" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
