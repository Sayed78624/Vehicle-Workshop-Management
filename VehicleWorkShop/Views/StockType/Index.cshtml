@model IEnumerable<VehicleWorkShop.ViewModels.StockTypeVM>

@{
    ViewData["Title"] = "Stock Type List";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">
            <i class="bi bi-box-seam-fill me-2"></i>Stock Type List
        </h3>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StockTypeId)</th>
                    <th>@Html.DisplayNameFor(model => model.StockTypeName)</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-black">@item.StockTypeId</td>
                        <td class="text-black">@item.StockTypeName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StockTypeId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.StockTypeId" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-info-circle-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.StockTypeId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
